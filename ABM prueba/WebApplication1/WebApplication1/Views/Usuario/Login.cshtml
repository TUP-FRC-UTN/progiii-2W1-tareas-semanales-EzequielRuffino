@model WebApplication1.Models.Usuario
@{
    ViewBag.Title = "Login";
}


@using (Html.BeginForm()) // me crea el form

{ <h2>Bienvenidos a la vista de Login</h2>
    <div class="row">
        <div class="col-sm-12">
            <h4>Ingrese al sistema</h4>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="col-sm-6 control-label">Nombre de usuario</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.nombreUsuario, htmlAttributes: new { @class = "form-control", @id = "txtNombreDeUsuario" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">Contraseña</label>
                    <div class="col-sm-6">
                        @Html.PasswordFor(model => model.password, htmlAttributes: new { @class = "form-control", @id = "txtPassword" })
                    </div>
                </div>
                <div class="form-group text-right">
                    <div class="col-xs-12">
                        <button class="btn btn btn-primary" type="submit">
                            INGRESAR
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>


}
